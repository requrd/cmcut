{
    "build": {
        "dockerfile": "./Dockerfile.dev"
    },
    //"initializeCommand": "/bin/sh .devcontainer/postCreateCommand.sh",
    "postCreateCommand": "bash",
    "remoteUser": "vscode",
    "containerEnv": {
        "NODE_PATH": "/app/node_modules"
    },
    // "workspaceMount": "source=${localWorkspaceFolder}/config,target=/app/config,type=bind,consistency=cached",
    // "workspaceFolder": "/workspace/${project}",
    "mounts": [
        "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/config,target=/app/config,type=bind,consistency=cached"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "editor.defaultFormatter": "esbenp.prettier-vscode",
                "[javascript]": {
                     "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "eslit": {
                    "nodePath": "/app/node_modules",
                },
            },
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
            ]
        }
    }
}